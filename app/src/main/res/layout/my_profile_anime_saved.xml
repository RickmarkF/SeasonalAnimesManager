<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"> <!-- <- Esto es lo importante -->

    <LinearLayout
        android:id="@+id/primer_layout"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/my_profile_anime_saved_anime_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Nombre"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/my_profile_anime_saved_anime_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="describe"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icon_default" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
